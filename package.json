{
  "name": "hytale-devtools",
  "displayName": "Hytale Devtools",
  "publisher": "jrddp",
  "icon": "media/icon.png",
  "description": "Hytale modding made easy",
  "repository": "https://github.com/jrddp/hytale-devtools",
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Extension Packs",
    "Language Packs"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hytale-devtools.createMod",
        "title": "Create New Hytale Mod",
        "category": "Hytale Devtools"
      },
      {
        "command": "hytale-devtools.addListener",
        "title": "Add new event listener",
        "category": "Hytale Devtools"
      },
      {
        "command": "hytale-devtools.copyBaseGameAsset",
        "title": "Copy Base Game Asset",
        "category": "Hytale Devtools"
      },
      {
        "command": "hytale-devtools.changeModPatchline",
        "title": "Change Mod Support Version Patchline",
        "category": "Hytale Devtools"
      },
      {
        "command": "hytale-devtools.nodeEditor.quickAction.goToRoot",
        "title": "Go to Root",
        "category": "Hytale Node Editor",
        "enablement": "activeCustomEditorId == 'hytale-devtools.hytaleNodeEditor' || activeWebviewPanelId == 'hytale-devtools.hytaleNodeEditor'"
      },
      {
        "command": "hytale-devtools.nodeEditor.quickAction.fitFullView",
        "title": "Fit Full View",
        "category": "Hytale Node Editor",
        "enablement": "activeCustomEditorId == 'hytale-devtools.hytaleNodeEditor' || activeWebviewPanelId == 'hytale-devtools.hytaleNodeEditor'"
      },
      {
        "command": "hytale-devtools.nodeEditor.quickAction.searchNodes",
        "title": "Search Nodes",
        "category": "Hytale Node Editor",
        "enablement": "activeCustomEditorId == 'hytale-devtools.hytaleNodeEditor' || activeWebviewPanelId == 'hytale-devtools.hytaleNodeEditor'"
      },
      {
        "command": "hytale-devtools.nodeEditor.quickAction.autoPositionNodes",
        "title": "Auto Position Nodes",
        "category": "Hytale Node Editor",
        "enablement": "activeCustomEditorId == 'hytale-devtools.hytaleNodeEditor' || activeWebviewPanelId == 'hytale-devtools.hytaleNodeEditor'"
      },
      {
        "command": "hytale-devtools.nodeEditor.quickAction.viewRawJson",
        "title": "View Raw JSON",
        "category": "Hytale Node Editor",
        "enablement": "activeCustomEditorId == 'hytale-devtools.hytaleNodeEditor' || activeWebviewPanelId == 'hytale-devtools.hytaleNodeEditor'"
      },
      {
        "command": "hytale-devtools.nodeEditor.quickAction.helpAndHotkeys",
        "title": "Show Help",
        "category": "Hytale Node Editor",
        "enablement": "activeCustomEditorId == 'hytale-devtools.hytaleNodeEditor' || activeWebviewPanelId == 'hytale-devtools.hytaleNodeEditor'"
      }
    ],
    "keybindings": [
      {
        "command": "hytale-devtools.nodeEditor.quickAction.searchNodes",
        "key": "f",
        "when": "(activeCustomEditorId == 'hytale-devtools.hytaleNodeEditor' || activeWebviewPanelId == 'hytale-devtools.hytaleNodeEditor') && !inputFocus"
      },
      {
        "command": "hytale-devtools.nodeEditor.quickAction.fitFullView",
        "key": "v",
        "when": "(activeCustomEditorId == 'hytale-devtools.hytaleNodeEditor' || activeWebviewPanelId == 'hytale-devtools.hytaleNodeEditor') && !inputFocus"
      },
      {
        "command": "hytale-devtools.nodeEditor.quickAction.autoPositionNodes",
        "key": "l",
        "when": "(activeCustomEditorId == 'hytale-devtools.hytaleNodeEditor' || activeWebviewPanelId == 'hytale-devtools.hytaleNodeEditor') && !inputFocus"
      },
      {
        "command": "hytale-devtools.nodeEditor.quickAction.helpAndHotkeys",
        "key": "shift+/",
        "when": "(activeCustomEditorId == 'hytale-devtools.hytaleNodeEditor' || activeWebviewPanelId == 'hytale-devtools.hytaleNodeEditor') && !inputFocus"
      }
    ],
    "configuration": {
      "title": "Hytale Devtools",
      "properties": {
        "hytale-devtools.defaultAuthor": {
          "type": "string",
          "default": "",
          "description": "Default author name for new mods."
        },
        "hytale-devtools.defaultGroup": {
          "type": "string",
          "default": "",
          "description": "Default group name for new mods."
        },
        "hytale-devtools.defaultWebsite": {
          "type": "string",
          "default": "",
          "description": "Default website for new mods."
        },
        "hytale-devtools.nodeEditor.controlScheme": {
          "type": "string",
          "enum": [
            "mouse",
            "trackpad"
          ],
          "enumDescriptions": [
            "Pan with drag, zoom with scroll, and box-select with Shift+drag.",
            "Pan with scroll, zoom with pinch, and box-select with drag."
          ],
          "default": "mouse",
          "description": "Control scheme used by the Hytale Node Editor."
        }
      }
    },
    "customEditors": [
      {
        "viewType": "hytale-devtools.hytaleNodeEditor",
        "displayName": "Hytale Node Editor",
        "selector": [
          {
            "filenamePattern": "**/HytaleGenerator/**/*.json"
          },
          {
            "filenamePattern": "**/ScriptedBrushes/**/*.json"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && pnpm run build:webview && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:webview": "vite build --watch --config webview/hytale-node-editor/vite.config.mjs",
    "dev:webview": "vite --config webview/hytale-node-editor/vite.config.mjs",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "build:companion": "node scripts/build-companion.js",
    "package": "pnpm run check-types && pnpm run lint && pnpm run build:webview && node esbuild.js --production && pnpm run build:companion",
    "vsce:package": "vsce package --no-dependencies",
    "vsce:publish": "vsce publish --no-dependencies",
    "build:webview": "vite build --config webview/hytale-node-editor/vite.config.mjs",
    "compile-tests": "tsc -p . --outDir out",
    "compile-tests:node-editor-parser": "tsc -p tsconfig.node-editor-parser-tests.json",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "test:node-editor-parser": "pnpm run compile-tests:node-editor-parser && printf '{\"type\":\"module\"}\\n' > out-node-editor-parser-tests/package.json && node ./node_modules/mocha/bin/mocha.js \"out-node-editor-parser-tests/test/node-editor-parser/**/*.test.js\"",
    "check-types": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\" \"webview/hytale-node-editor/src/**/*.svelte\"",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@tailwindcss/vite": "^4.2.1",
    "@types/d3-flextree": "^2.1.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "~20.19.35",
    "@types/rbush": "^4.0.0",
    "@types/vscode": "^1.109.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.21.5",
    "eslint": "^9.39.3",
    "eslint-plugin-svelte": "^3.15.0",
    "npm-run-all": "^4.1.5",
    "svelte": "^5.53.5",
    "svelte-eslint-parser": "^1.5.1",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.9.3",
    "vite": "^5.4.21"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^15.2.2",
    "@xyflow/svelte": "^1.5.1",
    "d3-flextree": "^2.1.2",
    "lucide-svelte": "^0.564.0",
    "rbush": "^4.0.1"
  }
}
